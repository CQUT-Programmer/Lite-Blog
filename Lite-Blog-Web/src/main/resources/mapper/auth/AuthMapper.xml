<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.liteweb.dao.auth.AuthMapper">

    <insert id="insertUser" parameterType="com.liteweb.entity.auth.User">
        INSERT INTO `user`
            (mail, password, avatar, nick_name, gender, description, birth,created_time,updated_time,roleId)
        VALUE
            (#{mail},
            #{password},
            #{avatar},
            #{nickName},
            #{gender},
            #{description},
            #{birth},
            #{createdTime},
            #{updatedTime},
            #{roleId});
    </insert>

    <select id="getUser" resultType="com.liteweb.entity.auth.User" parameterType="java.lang.String">
        SELECT
            *
        FROM
            `user`
        WHERE
            mail = #{mail};
    </select>
</mapper>
